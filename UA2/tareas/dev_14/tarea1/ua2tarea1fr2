public class ua2tarea1fr2 {
    private static int contador = 0;

    public static void main(String[] args) {
        Thread hilo1 = new Thread(() -> incrementar("hilo1"));
        Thread hilo2 = new Thread(() -> incrementar("hilo2"));
        Thread hilo3 = new Thread(() -> incrementar("hilo3"));
        Thread hilo4 = new Thread(() -> incrementar("hilo4"));
        Thread hilo5 = new Thread(() -> incrementar("hilo5"));

        hilo1.start();
        hilo2.start();
        hilo3.start();
        hilo4.start();
        hilo5.start();

        try {
            hilo1.join();
            hilo2.join();
            hilo3.join();
            hilo4.join();
            hilo5.join();
        } catch (InterruptedException e) {
            System.out.println("Hilo interrumpido: " + e.getMessage());
        }

        System.out.println("Valor final con sincronizaci√≥n (Thread): " + contador);
    }

    private static synchronized void incrementar(String nombreHilo) {
        for (int j = 0; j < 1000; j++) {
            contador++;
            System.out.println("Soy " + nombreHilo + ": " + contador);
        }
    }
}
//con la sincronizacion evitamos que queda hilo vaya por su cuenta sincronizandolos y siguiendo 
//un "orden" 
