
// ua2tarea1fr2runnable.java

public class ua2tarea1fr2runnable {

    // Variable contador
    private static int contador = 0;

    
    public synchronized static void incrementarContador() {
        contador += 1000;
    }

    public static void main(String[] args) {
        
        Runnable tarea = new Runnable() {
            @Override
            public void run() {
             
                incrementarContador();
            }
        };

        // lanzamos los hilos
        Thread[] hilos = new Thread[5];

        try {
            for (int i = 0; i < 5; i++) {
                hilos[i] = new Thread(tarea);
                hilos[i].start();  // Inicia el hilo
            }

            
            for (int i = 0; i < 5; i++) {
                hilos[i].join();  
            }

            // Imprimimos valor del contador
            System.out.println("Valor final del contador: " + contador);

        } catch (InterruptedException e) {
            // Control de errores   
            System.err.println("Error al ejecutar los hilos: " + e.getMessage());
        }
    }
}
